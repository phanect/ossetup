{
  "variables": {
    "kubuntu_version": ""
  },
  "builders": [{
    "type": "docker",
    "image": "phanect/kubuntu:{{ user `kubuntu_version` }}",
    "commit": true
  }],
  "provisioners": [
    {
      "type": "shell",
      "inline": [ "DEBIAN_FRONTEND=noninteractive apt-get install curl -y" ]
    },
    {
      "type": "file",
      "source": "setup.sh",
      "destination": "/tmp/setup.sh"
    },
    {
      "type": "shell",
      "inline": [ "chmod +x /tmp/setup.sh" ]
    }
  ],
  "post-processors": [{
      "type": "docker-tag",
      "repository": "phanect/ossetup"
  }]
}
